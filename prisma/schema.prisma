generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Goods {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  img         String
  mobileImg   String
  title       String
  price       Int
  category    String
  descr       String
  vendorCode  String
  brand       String
  application String
  howWork     String
  fullDescr   String
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String
  goodsBasket String?
  orderDetails String?
  orders String?
}

