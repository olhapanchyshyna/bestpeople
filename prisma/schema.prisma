generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Goods {
  id          Int    @id @default(autoincrement())
  slug        String @unique
  img         String
  mobileImg   String
  title       String
  price       Int
  category    String
  descr       String
  vendorCode  String
  brand       String
  application String
  howWork     String
  fullDescr   String
}

model UserBest {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String
  goodsBasket String?
  orderDetails String?
  orders String?
}

